<style>
    .avatar {
        width: 35px;
        height: 35px;
        border: 2px solid lightgrey;
        border-radius: 50%;
        overflow: hidden;
        display: inline-table;
    }
    .avatar-img{
        width: 100%;
        height: 100%;
    }

    .wallet {
        font-size: xx-large;
        color: #d58a00;
        position: relative;
        top: 8px;
    }

    .avai-bal {
        font-size: xx-small;
        position: relative;
        top: 5px;
        
    }
    .wallet-bal {
        font-weight: bolder;
        font-size: larger;
    }
</style>


<div class="d-flex">
    @if (!User.IsInRole("Admin")) { 
    <div class="btn-group mx-3">
        <button type="button" class="dropdown-toggle border-0" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="d-inline-block">
                <div class="d-flex">
                    <div>
                        <div class="icon-con">
                            <span class="material-symbols-outlined wallet">
                                account_balance_wallet
                            </span>
                        </div>
                    </div>
                    <div>
                        <div class="avai-bal">Available Balance</div>
                        <div class="wallet-bal">₹@Convert.ToInt32(ViewBag.Money)</div>
                    </div>
                </div>
            </div>
        </button>

        <div class="dropdown-menu dropdown-menu-end p-3 pb-3">
            <div class="text-center">
                <p class="small m-0">Available Balance</p>
                <div class="d-inline-flex align-items-baseline" style="color: #d58a00;">
                    ₹<h1>@String.Format("{0:0.00}", ViewBag.Money)</h1>
                </div>
                <a asp-controller="User" asp-action="Wallet" class="btn btn-block btn-primary w-100 p">Add Balance</a>
            </div>
        </div>
    </div>
    }
    

    <div class="btn-group">
        <button type="button" class=" border-0" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="avatar">
                <img class="avatar-img" src="https://img.freepik.com/free-photo/cool-geometric-triangular-figure-neon-laser-light-great-backgrounds-wallpapers_181624-9331.jpg?w=2000" alt="Avatar">
            </div>
        </button>
        <ul class="dropdown-menu dropdown-menu-end" style="text-align:end; min-width:unset;">
            <li><a asp-controller="UserDetails" asp-action="Profile" asp-route-id="@ViewBag.Id" class="dropdown-item" type="button">Profile</a></li>
            @if (!User.IsInRole("Admin"))
            {
                <li><a asp-controller="User" asp-action="Orders" class="dropdown-item" type="button">Your Orders</a></li>
            }
            <li><hr class="dropdown-divider"></li>
            <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item" type="button">Logout</a></li>
        </ul>
    </div>

</div>


