@model FlightReservation.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["CSS"] = "/css/login.css";
}




<div class="container mt-2">
    <div class="row justify-content-center align-items-center text-center p-2">
        <div class="m-1 col-sm-8 col-md-6 col-lg-4 shadow-sm p-3 mb-5 bg-white border rounded">
            <div class="pt-3 pb-5">
                <div class="text-danger" asp-validation-summary="All"></div>
                <img class="rounded mx-auto d-block" src="https://cdn-icons-png.flaticon.com/512/3125/3125713.png" alt="" style="width:70px;">
                <p class="text-center text-uppercase mt-3">Login</p>
                <form class="form text-center" asp-controller="Account" asp-action="Login" method="POST">
                    <div class="form-group input-group-md mb-2">
                        <input type="text" class="form-control " asp-for="EmailID" placeholder="Enter email">
                    </div>
                    <div class="form-group input-group-md mb-2 position-relative">
                        <input type="password" class="form-control " asp-for="Password" placeholder="Password">
                        <span class="material-symbols-outlined" style="position:absolute; cursor:pointer; color: darkgray; top: 36%; right: 20px;" onclick="passwordVisibilty(this)">visibility</span>
                    </div>
                    <div class="form-check text-start">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>
                    <button class="btn btn-lg btn-block btn-primary pt-1 mt-4" type="submit">
                        Login
                    </button>

                </form>
            </div>
            <a asp-controller="Account" asp-action="Register" class="text-center d-block mt-2">Create an account? </a>
        </div>
    </div>
</div>

