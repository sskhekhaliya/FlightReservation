@model FlightReservation.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="max-width: fit-content">
    <div class="p-4 pt-2 mt-3" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
        <h4 class="text-center mb-4">Register</h4>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div>
                <div class="row g-3 mb-3">
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="text" asp-for="FirstName" class="form-control" />
                            <label asp-for="FirstName">First Name</label>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="text" asp-for="LastName" class="form-control" />
                            <label asp-for="LastName">Last Name</label>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="text" asp-for="EmailID" class="form-control" />
                            <label asp-for="EmailID">Email Address</label>
                        </div>
                    </div>
                </div>


                <div class="row g-3 mb-3">
                    <div class="col-md">
                        <div class="form-floating position-relative">
                            <input type="password" asp-for="Password" class="form-control" />
                            <label asp-for="Password">Password</label>
                            <span class="material-symbols-outlined" style="position:absolute; cursor:pointer; color: darkgray; top: 36%; right: 20px;" onclick="passwordVisibilty(this)">visibility</span>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-floating position-relative">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <span class="material-symbols-outlined" style="position:absolute; cursor:pointer; color: darkgray; top: 36%; right: 20px;" onclick="passwordVisibilty(this)">visibility</span>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mb-3">

                    <div class="col-md">
                        <div class="form-floating">
                            <select asp-for="Gender" class="form-select">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <label asp-for="Gender">Gender</label>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="date" asp-for="DOB" class="form-control" />
                            <label asp-for="DOB">Date of Birth</label>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="number" asp-for="Age" class="form-control" />
                            <label asp-for="Age">Age</label>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="number" asp-for="PhoneNo" class="form-control" />
                            <label asp-for="PhoneNo">Mobile No.</label>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md">
                        <div class="form-floating">
                            <input type="text" asp-for="Address" class="form-control" />
                            <label asp-for="Address">Address</label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit" style="padding: 6px 60px; border-radius: 25px;">Submit</button>
            </div>
        </form>
    </div>
</div>