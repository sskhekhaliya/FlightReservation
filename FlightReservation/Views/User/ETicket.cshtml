@model FlightReservation.Models.Booking;
@{
    ViewData["Title"] = "ETicket";
    var user = Model.UserDetail;
    var flight = Model.Schedule.FlightDetail;
    var schedult = Model.Schedule;
    int price = Model.Class == "E" ? schedult.EPrice : schedult.BPrice;
    double tax = 0.18 * price;
}
<style>
    p{
        font-size: medium;
    }
    .table-borderless > tbody > tr > td,
    .table-borderless > tbody > tr > th,
    .table-borderless > tfoot > tr > td,
    .table-borderless > tfoot > tr > th,
    .table-borderless > thead > tr > td,
    .table-borderless > thead > tr > th {
        border: none;
    }
</style>
<div class="border-bottom p-2 my-5">
    <h1>E-Ticket</h1>
</div>
<div class="border-bottom p-1 my-3">
    <p class="p-0 m-0"><strong>Booking ID: </strong>@Model.BookingID</p>
</div>
<div></div>

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-borderless">
                <tr>
                    <td><strong>Name:&ensp;</strong></td>
                    <td>@user.FirstName @user.LastName</td>
                </tr>
                <tr>
                    <td><strong>Email ID:&ensp;</strong></td>
                    <td>@user.EmailID</td>
                </tr>
                <tr>
                    <td><strong>Gender:&ensp;</strong></td>
                    <td>@user.Gender</td>
                </tr>
                <tr>
                    <td><strong>Date of Birth:&ensp;</strong></td>
                    <td>@user.DOB</td>
                </tr>
                <tr>
                    <td><strong>Phone No.:&ensp;</strong></td>
                    <td>@user.PhoneNo</td>
                </tr>
                <tr>
                    <td><strong>Address:&ensp;</strong></td>
                    <td>@user.Address</td>
                </tr>
            </table>
        </div>
        <div class="col">
            <table class="table table-borderless">
                <tr>
                    <td><strong>Flight Number:&ensp;</strong></td>
                    <td>@flight.FlightID</td>
                </tr>
                <tr>
                    <td><strong>Flight Name:&ensp;</strong></td>
                    <td>@flight.Name;</td>
                </tr>
                <tr>
                    <td><strong>Class:&ensp;</strong></td>
                    <td>@Model.Class</td>
                </tr>
                <tr>
                    <td><strong>Boarding From:&ensp;</strong></td>
                    <td>@schedult.From</td>
                </tr>
                <tr>
                    <td><strong>Boarding Time:&ensp;</strong></td>
                    <td>@schedult.BoardingTime.ToString("ddd dd/MM/yy hh:mm:tt")</td>
                </tr>
                <tr>
                    <td><strong>Departure Place:&ensp;</strong></td>
                    <td>@schedult.To</td>
                </tr>
                <tr>
                    <td><strong>Departure Time:&ensp;</strong></td>
                    <td>@schedult.DepartureTime.ToString("ddd dd/MM/yy hh:mm:tt")</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="col">
    <div class="price-col p-3">
        <div class="row mb-4">
            <div class="col-8">Price Summary</div>
        </div>
        <div class="row mb-3 f-medium">
            <div class="col-8">Adult x 1</div>
            <div class="col-4 text-end"><strong>₹@(String.Format("{0:n}", price))</strong></div>
        </div>
        <div class="row f-medium">
            <div class="col-8">Total taxes</div>
            <div class="col-4 text-end"><strong>₹@(String.Format("{0:n}", tax))</strong></div>
        </div>
        <hr />
        <div class="row font-weight-bolder text-danger">
            <div class="col-8">Grand Total</div>
            <div class="col-4 text-end"><strong>₹@(String.Format("{0:n}", price + tax))</strong></div>
        </div>
    </div>

</div>