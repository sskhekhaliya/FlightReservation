@model IEnumerable<FlightReservation.Models.Schedule>
@{
    ViewData["Title"] = "Home";
    ViewData["CSS"] = "/css/home.css";
    ViewData["CSS2"] = "/css/searchResult.css";
    string Date = ViewBag.Date == null ? DateTime.Now.Date.ToString("yyyy-MM-dd") : ViewBag.Date;
    string Class = ViewBag.Class;
    string From = ViewBag.From;
    string To = ViewBag.To;
    string FAirport = ViewBag.FAirport;
    string TAirport = ViewBag.TAirport;
    string btn = ViewBag.Btn;
}

@if (btn == null)
{
    <div class="home-img">
        <h1 style="font-family: 'Lobster', cursive; color: #a1d8ef;">Enjoy!</h1>
        <p style="color: gray;">The moment you doubt whether you can fly,<br />you cease forever to be able to do it.</p>
    </div>

    <h4 class="m-0 sb-head">Search</h4>
}

<div class="text-danger" asp-validation-summary="All"></div>
<div class="form-con">
    <form asp-controller="Home" asp-action="Index" method="get">

        <div class="mb-2">
            <input class="form-control w-auto d-inline home-form mr-2" type="date" name="Date" value="@Date" />
            <select name="Class" class="form-select w-auto border-0 d-inline home-form">
                <option value="E">Economy</option>
                <option value="B">Bussiness</option>
            </select>
        </div>

        <div class="from-inp d-inline">
            <div class="row">
                <div class="col-sm">
                    <input list="fromCities" id="from" type="text" class="search-inp" name="From" size="50" value="@From" autocomplete="off" placeholder="FROM" onfocus="clearInput(this)" onblur="getAirportName(this)" />
                    <input type="hidden" name="FAirport" />
                    <datalist id="fromCities">
                        <option value="DEL - New Delhi">Indira Gandhi International Airport</option>
                        <option value="BOM - Mumbai">Chhatrapati Shivaji Maharaj International Airport</option>
                        <option value="BLR - Bengaluru">Kempegowda International Airport</option>
                        <option value="HYD - Hyderabad">Rajiv Gandhi International Airport</option>
                        <option value="CCU - Kolkata">Netaji Subhas Chandra Bose International Airport</option>
                        <option value="MAA - Chennai">Chennai International Airport</option>
                        <option value="AMD - Ahmedabad">Sardar Vallabhbhai Patel International Airport</option>
                        <option value="GOI - Goa">Goa International Airport</option>
                        <option value="COK - Kochi">Cochin International Airport</option>
                        <option value="PNQ - Pune">Pune Airport</option>
                    </datalist>
                    <span style="padding-left: 10px" id="from-airport-name">@FAirport</span>
                </div>

                <div class="col-sm">
                    <input list="toCities" id="to" type="text" class="search-inp" name="To" size="50" autocomplete="off" placeholder="TO" value="@To" onfocus="clearInput(this)" onblur="getAirportName(this)" />
                    <input type="hidden" name="TAirport" />
                    <datalist id="toCities">
                        <option value="DEL - New Delhi">Indira Gandhi International Airport</option>
                        <option value="BOM - Mumbai">Chhatrapati Shivaji Maharaj International Airport</option>
                        <option value="BLR - Bengaluru">Kempegowda International Airport</option>
                        <option value="HYD - Hyderabad">Rajiv Gandhi International Airport</option>
                        <option value="CCU - Kolkata">Netaji Subhas Chandra Bose International Airport</option>
                        <option value="MAA - Chennai">Chennai International Airport</option>
                        <option value="AMD - Ahmedabad">Sardar Vallabhbhai Patel International Airport</option>
                        <option value="GOI - Goa">Goa International Airport</option>
                        <option value="COK - Kochi">Cochin International Airport</option>
                        <option value="PNQ - Pune">Pune Airport</option>
                    </datalist>
                    <span style="padding-left: 10px" id="to-airport-name">@TAirport</span>
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary search-btn" type="submit" value="on" name="btn">
                    <span style="position: relative; top: 7px;" class="material-symbols-outlined">search</span>  Search
                </button>
            </div>
        </div>

    </form>
</div>

<partial name="_SearchResult" />